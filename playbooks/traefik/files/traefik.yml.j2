# API and Dashboard on port 8080
api:
  dashboard: true
  # We're not exposing this to the internet
  insecure: true

entryPoints:
  web:
    address: ":80"
    http:
      redirections:
        entryPoint:
          to: websecure
          scheme: https
  websecure:
    address: ":443"
    asDefault: true

providers:
  file:
    filename: {{ traefik_config_dir }}/routes.yml
    watch: true
